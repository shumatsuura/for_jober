<div class="container">
  <div class="card mb-3">
    <div class="row no-gutters">
      <div class="col-md-2">
        <div class="m-1">
          <%= image_tag @company.logo.url, class: 'img-thumbnail d-block mx-auto m-4' if @company.logo.present? %>
          <%= image_tag("default_image.jpeg", class: 'img-thumbnail d-block mx-auto m-4') unless @company.logo.present? %>
        </div>
        <div class="m-2">
          <h6 class="card-title"><%= @company.name %></h6>
          <p><%= @company.email %></p>
        </div>
      </div>
      <div class="col-md-10">
        <div class="card-body">
          <div class="row">
            <div class=" col-md-8">
            <table class="table table-bordered table-sm">
                <tr><td>Name:</td><td><%= @company.name %></td></tr>
                <tr><td>Location:</td><td><%= @company.location %></td></tr>
                <tr><td>Phone:</td><td><%= @company.phone_number %></td></tr>
                <tr><td>Incorporation:</td><td><%= @company.date_of_incorporation.strftime("%b, %Y") if @company.date_of_incorporation %></td></tr>
                <tr><td>No. of Employees:</td><td><%= @company.number_of_employees.to_s(:delimited) if @company.number_of_employees.present? %></td></tr>
                <tr><td>Adress:</td><td><%= @company.address %></td></tr>
                <tr><td>Paid up capital:</td><td><%= @company.paid_up_capital.to_s(:delimited) if @company.paid_up_capital.present? %></td></tr>
                <tr><td>Membership:</td><td><%= @company.member_status %></td></tr>
            </table>
          </div>
            <div class="col-md-4">
                <%= link_to "Create New Post", new_post_path, class: "btn btn-primary w-100 mb-1" %>
                <%= link_to "Confirm Company Page", company_path, class: "btn btn-primary w-100 mb-1" %>
                <%= link_to "Confirm Scout List", scouts_path, class: "btn btn-primary w-100 mb-1" %>
                <%= link_to 'Edit Account', edit_company_registration_path, class: "btn btn-primary w-100 mb-1" %>
                <%= link_to 'Edit Profile', edit_company_path, class: "btn btn-primary w-100 mb-1" %>
                <%= link_to 'Skill', company_skills_path, class: "btn btn-primary w-100 mb-1" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <table class="table table-bordered table-hover">
    <h4>List of Posts</h4>
    <thead class="thead-dark">
      <tr>
        <th>#</th>
        <th>title</th>
        <th>position</th>
        <th>status</th>
        <th>No. of Applications</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% if @company.posts.present? %>
      <% @company.posts.each_with_index do |post,i| %>
      <tr>
        <td><%= i + 1 %></td>
        <td><%= link_to "#{post.title}", post_path(post.id) %></td>
        <td><%= post.position %></td>
        <td><%= post.status %></td>
        <td><%= post.applies.count %></td>
        <td><%= link_to "Edit", edit_post_path(post.id) %></td>
        <td><%= link_to "Manage", manage_post_path(post.id) %></td>
        <td><%= link_to "Delete", post_path(post.id), method: :delete, data:{ confirm: "Are you sure?"} %></td>
      </tr>
      <% end %>
    <% else %>
      <td colspan="8">Currently there are no posts.</td>
    <% end %>
    </tbody>
  </table>
  <table class="table table-bordered table-hover">
    <h4>Scouted Users</h4>
    <thead class="thead-dark">
      <tr>
        <th>No.</th>
        <th>Name</th>
        <th>Gender</th>
        <th>Age</th>
        <th>Last_company</th>
        <th>Position</th>
        <th>Expected Salary</th>
        <th>Education School</th>
        <th>Education Major</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% if @company.scouts.present? %>
        <% @company.scouts.each_with_index do |scout,i| %>
        <% user = scout.user %>
        <tr>
          <th><%= i + 1 %></th>
          <td><%= link_to user.first_name || "No Name", user_path(user.id) %></td>
          <td><%= user.gender %></td>
          <td><%= user.age %></td>
          <td><%= user.work_experiences.present? ? user.work_experiences.last.company : "" %></td>
          <td><%= user.work_experiences.present? ? user.work_experiences.last.position : "" %></td>
          <td><%= user.expected_salary.to_s(:delimited) if user.expected_salary.present? %></td>
          <td><%= user.work_experiences.present? ? user.educations.last.school_name : "" %></td>
          <td><%= user.work_experiences.present? ? user.educations.last.major : "" %></td>
          <td><%= link_to(scout_scout_messages_path(scout.id)) do %>
            <button type="button" class = "btn btn-primary">
              <span>
              <span class="small">Message</span><span class="badge badge-light"><%= scout.scout_messages.where(read: false, user_id: user.id).count %></span>
              </span>
            </button>
            <% end %>
          </td>
        </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="10">Currently there are no scouted users.</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
