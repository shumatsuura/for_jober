<div class="container">
  <h1>Skill Form</h1>
    <% if @company_skill.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(@company_skill.errors.count, "error") %>prohibited this skill from being saved:</h2>
      <ul>
      <% @company_skill.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
    <% end %>

  <%= form_with(model: @company_skill, local: true) do |f| %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  <% end %>

</div>
