<fieldset>
  <div class="border rounded bg-light p-2 form-group">
    <h5>Desired Job Category<span class="users_child_index"><%= f.index + 1 %><span></h5>
    <div class="form-group row">
      <div class="col-sm-3 col-form-label">
        <%= f.label :job_category %><span class="badge badge-sm badge-info ml-2">Required</span>
      </div>
      <div class="col-sm-7 d-flex align-items-center">
        <%= f.select :job_category_id, JobCategory.select(:id, :name).map{ |n| [n.name.to_sym,n.id]}.to_h, {include_blank: true}, class: "form-control",required: true %>
      </div>

      <%= f.hidden_field :user_id, :value => params[:id] %>
      <div class = "text-right col-sm-2">
        <%= f.hidden_field :_destroy %>
        <%= link_to "Delete", '#', class: "remove_fields btn btn-danger btn-sm" %>
      </div>
    </div>
  </div>
</fieldset>
