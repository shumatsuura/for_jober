<fieldset>
  <div class="border rounded bg-light p-2 form-group">
    <h5>Work Experience<span class="users_child_index"><%= f.index + 1 %><span></h5>
      <div class="form-row">
        <div class="form-group col-md-6">
          <%= f.label :company %><span class="badge badge-sm badge-info ml-2">Required</span>
          <%= f.text_field :company, class:"form-control", required: true %>
        </div>
        <div class="form-group col-md-6">
          <%= f.label :position %>
          <%= f.text_field :position, class:"form-control" %>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-auto">
          <%= f.label :period_start %><span class="badge badge-sm badge-info ml-2">Required</span>
          <div class="form-inline">
            <%= f.datetime_select :period_start,{
              include_blank: true,
              default: nil,
              start_year: 1970,
              end_year: 2020,
              discard_day: true,
              discard_hour: true
            },
              class: "form-control",
              required: true
             %>
           </div>

        </div>
        <div class="form-group col-auto">
            <%= f.label :period_end %>
            <div class="form-inline">
              <%= f.datetime_select :period_end,
              {
                include_blank: true,
                default: nil,
                start_year: 1970,
                end_year: 2020,
                discard_day: true,
                discard_hour: true
              },
                class: "form-control"
               %>
             </div>
          </div>
          <div class="form-group col-auto">
            <%= f.label :currently_employed %>
            <%= f.check_box :currently_employed %>
          </div>
          <div class="form-group col-auto">
            <%= f.label :salary %>
            <%= f.text_field :salary, class: "form-control" %>
          </div>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control" %>
      </div>
      <div class="text-right">
        <%= f.hidden_field :_destroy %>
        <%= link_to "Delete", '#', class: "remove_fields btn btn-danger btn-sm" %>
      </div>
  </div>
</fieldset>
